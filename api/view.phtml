<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Copy and Paste - View</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github-dark.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="nav-links">
            <a href="/" class="nav-link">Create New Paste</a>
        </div>
        <h1><?php echo $isSingle ? "Paste Detail" : "Public Pastes"; ?></h1>
        
        <?php if ($isSingle && isset($hasPassword) && $hasPassword && !$passwordCorrect): ?>
            <div class="entry">
                <p>This paste is password protected.</p>
                <?php if (isset($passwordError)): ?>
                    <p style="color: var(--error-color);"><?php echo $passwordError; ?></p>
                <?php endif; ?>
                <form method="POST">
                    <input type="password" name="password" class="style-input" placeholder="Enter password" required>
                    <button type="submit" class="copy-btn">Unlock</button>
                </form>
            </div>
        <?php elseif (!empty($result)): ?>
            <?php foreach ($result as $row): ?>
                <div class="entry">
                    <div class="content" id="content-<?php echo $row['id']; ?>"><?php echo htmlspecialchars($row['content']); ?></div>
                    <div class="timestamp">Saved on: <?php echo $row['created_at']; ?></div>
                    <div class="actions">
                        <?php if ($isSingle): ?>
                            <button class="copy-btn" onclick="copyCurrentUrl()">Copy Link</button>
                            <button class="copy-btn" onclick="copyContent('content-<?php echo $row['id']; ?>')">Copy Content</button>
                        <?php else: ?>
                            <a href="/view?id=<?php echo $row['id']; ?>" class="share-link">Share Link</a>
                            <button class="copy-btn" onclick="copyText(<?php echo json_encode($row['content']); ?>)">Copy Raw</button>
                        <?php endif; ?>
                    </div>
                </div>
                <?php if ($row['content'] !== null && $row['content'] !== "[Password Protected]"): ?>
                    <script>
                        (function() {
                            const contentDiv = document.getElementById('content-<?php echo $row['id']; ?>');
                            const rawContent = <?php echo json_encode($row['content']); ?>;
                            contentDiv.innerHTML = marked.parse(rawContent);
                            contentDiv.querySelectorAll('pre code').forEach((block) => {
                                hljs.highlightElement(block);
                            });
                        })();
                    </script>
                <?php endif; ?>
            <?php endforeach; ?>
        <?php else: ?>
            <p>No content available.</p>
        <?php endif; ?>
    </div>
    <footer class="site-footer">
        <div class="container">
            <hr>
            <p>&copy; 2026 Copy and Paste. All rights reserved. <a href="/privacy.html" class="nav-link">개인정보 처리방침</a></p>
        </div>
    </footer>
    <script>
        function copyCurrentUrl() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(() => {
                alert("Link copied to clipboard!");
            });
        }

        function copyContent(elementId) {
            const element = document.getElementById(elementId);
            // Copy innerText to get the rendered text version
            navigator.clipboard.writeText(element.innerText).then(() => {
                alert("Content copied to clipboard!");
            });
        }

        function copyText(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert("Copied to clipboard!");
            });
        }
    </script>
</body>

</html>