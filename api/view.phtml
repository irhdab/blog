<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Copy and Paste - View</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="nav-links">
            <a href="/" class="nav-link">Create New Paste</a>
        </div>
        <h1><?php echo $isSingle ? "Paste Detail" : "Public Pastes"; ?></h1>
        
        <?php if ($isSingle && isset($hasPassword) && $hasPassword && !$passwordCorrect): ?>
            <div class="entry">
                <p>This paste is password protected.</p>
                <?php if (isset($passwordError)): ?>
                    <p style="color: var(--error-color);"><?php echo $passwordError; ?></p>
                <?php endif; ?>
                <form method="POST">
                    <input type="password" name="password" class="style-input" placeholder="Enter password" required>
                    <button type="submit" class="copy-btn">Unlock</button>
                </form>
            </div>
        <?php elseif (!empty($result)): ?>
            <?php foreach ($result as $row): ?>
                <div class="entry">
                    <div class="content" id="content-<?php echo $row['id']; ?>"><?php echo htmlspecialchars($row['content']); ?></div>
                    <div class="timestamp">Saved on: <?php echo $row['created_at']; ?></div>
                    <div class="actions">
                        <?php if ($isSingle): ?>
                            <button class="copy-btn" onclick="copyCurrentUrl()">Copy Link</button>
                        <?php else: ?>
                            <a href="/view?id=<?php echo $row['id']; ?>" class="share-link">Share Link</a>
                        <?php endif; ?>
                    </div>
                </div>
                <?php if ($row['content'] !== null && $row['content'] !== "[Password Protected]"): ?>
                    <script>
                        document.getElementById('content-<?php echo $row['id']; ?>').innerHTML = marked.parse(<?php echo json_encode($row['content']); ?>);
                    </script>
                <?php endif; ?>
            <?php endforeach; ?>
        <?php else: ?>
            <p>No content available.</p>
        <?php endif; ?>
    </div>
    <script>
        function copyCurrentUrl() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(() => {
                alert("Link copied to clipboard!");
            });
        }
    </script>
</body>

</html>